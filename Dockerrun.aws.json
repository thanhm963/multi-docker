{
  "AWSEBDockerrunVersion": 1,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "thanhma791/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "thanhma791/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "thanhma791/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "thanhma791/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": {
        "hostPort": 80,
        "containerPort": 80
      },
      "links": ["client", "server"],
      "memory": 128
    }
  ]
}
